<assembly>
  <id>app</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
        <include>*.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/app</directory>
      <outputDirectory></outputDirectory>
      <excludes>
        <exclude>**/*.sh</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/app</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0777</fileMode>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>
